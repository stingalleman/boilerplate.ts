{
  "name": "boilerplate.ts",
  "version": "1.0.0",
  "repository": "git@github.com:stingalleman/boilerplate.ts.git",
  "author": "Sting Alleman <stingalleman@icloud.com>",
  "license": "MIT",
  "scripts": {
    "dev": "tsc-watch --project . --outDir ./dist --onSuccess \"node ./dist\"",
    "compile": "tsc -p .",
    "compile:watch": "tsc -p . -w",
    "lint": "eslint **/*.ts",
    "lint:tsc": "tsc --noEmit -p .",
    "lint:tsc:watch": "tsc --noEmit -w -p .",
    "prettier": "prettier -c .",
    "prettier:fix": "prettier -c -w ."
  },
  "devDependencies": {
    "@tribecamp/eslint-config-base": "^1.1.2",
    "@tribecamp/eslint-config-typescript": "^1.1.3",
    "@types/node": "^14.14.14",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "prettier": "^2.2.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3"
  }
}
